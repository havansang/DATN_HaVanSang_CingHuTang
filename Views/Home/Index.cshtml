@using CingHuTang.Models.DTOs
@{
    ViewData["Title"] = "Home Page";
}

<!-- Start Banner Hero -->
<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner  mb-5 mt-3">
        <div class="carousel-item active">
            <div class="container">
                <div class="row p-5">
                    <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                        <img class="img-fluid" src="~/assets/images/blog1_1.jpg" alt="">
                    </div>
                    <div class="col-lg-6 mb-0 d-flex align-items-center">
                        <div class="text-align-left align-self-center">
                            <h1 class="h1 text-success"><b>Milk Tea Heaven</b></h1>
                            <h3 class="h2">Nâng tầm hương vị, kết nối đam mê</h3>
                            <p>
                                Chào mừng bạn đến với Milk Tea Shop, nơi mỗi ly trà sữa là một câu chuyện đầy cảm hứng. Tại đây, 
                                chúng tôi tự hào mang đến cho bạn những ly trà sữa thơm ngon, độc đáo từ những nguyên liệu tươi ngon nhất Việt Nam. 
                                Hãy cùng tận hưởng hương vị ngọt ngào và tận hưởng những khoảnh khắc tuyệt vời bên bạn bè!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="container">
                <div class="row p-5">
                    <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                        <img class="img-fluid" src="~/assets/images/blog1_5.jpg" alt="">
                    </div>
                    <div class="col-lg-6 mb-0 d-flex align-items-center">
                        <div class="text-align-left">
                            <h1 class="h1 text-success">Không gian</h1>
                            <h3 class="h2">Chạm vào hương vị, kết nối tâm hồn</h3>
                            <p>
                                Với không gian hiện đại và ấm cúng, nơi bạn có thể thư giãn giữa những chậu cây xanh mát và thưởng thức ly trà sữa thơm ngon. 
                                Hãy đến để trải nghiệm sự hòa quyện giữa thiên nhiên và hương vị tuyệt hảo của chúng tôi. 
                                Tận hưởng những giây phút thoải mái, ngọt ngào bên ly trà sữa yêu thích nhé!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="container">
                <div class="row p-5">
                    <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                        <img class="img-fluid" src="~/assets/images/blog1_6.jpg" alt="">
                    </div>
                    <div class="col-lg-6 mb-0 d-flex align-items-center">
                        <div class="text-align-left">
                            <h1 class="h1 text-success">Pha chế</h1>
                            <h3 class="h2">Mỗi ly trà sữa, một chuyến phiêu lưu mới bắt đầu.</h3>
                            <p>
                                Đội ngũ pha chế giàu kinh nghiệm và đam mê của chúng tôi luôn sáng tạo, không ngừng học hỏi để mang đến cho bạn những trải nghiệm trà sữa độc đáo và hoàn hảo nhất. 
                                Chúng tôi sử dụng những nguyên liệu tươi ngon nhất, kết hợp cùng kỹ thuật pha chế tinh tế để tạo ra những ly trà sữa thơm ngon, mang hương vị đặc trưng và đầy hứng khởi. 
                                Hãy đến và khám phá những sáng tạo mới lạ cùng chúng tôi!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
        <i class="bi bi-chevron-left"></i>
    </a>
    <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
        <i class="bi bi-chevron-right"></i>
    </a>
</div>
<!-- End Banner Hero -->


<section class="mb-5" style="background: beige;">
    <div class="container">
        <div class="row text-center py-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Sản phẩm bán chạy</h1>
                <p>
                    Trọn vị tuyệt vời trong từng ly trà sữa
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (ProductDto item in ViewBag.TopSeller)
            {
                <div class="col-12 col-md-3 mb-4 position-relative">
                    <div class="badge bg-danger position-absolute" style="top: 0.5rem; right: 1.5rem; z-index: 99999 !important;">HOT</div>
                    <div class="card h-100">
                        <a asp-controller="Shop" asp-action="IndexDetails" asp-route-prId="@item.Id">
                            <img src="@item.ImageUrl" class="card-img-top">
                        </a>
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                </li>
                                <li class="text-muted text-right">@item.Price.ToString("N0") VNĐ</li>
                            </ul>
                            <a class="h3 text-decoration-none text-dark">@item.ProductName</a>
                            <p class="text-center mb-0"><a class="btn btn-success" asp-controller="Shop" asp-action="Index">Xem thêm</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
